name:                hasbolt-sample-app
version:             0.1.0.0
synopsis:            Sample Movie Database application with Haskell backend
description:         Please see README.md
homepage:            https://github.com/zmactep/hasbolt-sample-app#readme
license:             BSD3
license-file:        LICENSE
author:              Pavel Yakovlev
maintainer:          pavel@yakovlev.me
copyright:           Copyright: (c) 2016 Pavel Yakovlev
category:            Database
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     SimpleServer
  other-modules:       Data
                     , Routes
                     , Type
  build-depends:       base >= 4.8 && < 5
                     , hasbolt
                     , scotty
                     , wai-extra
                     , resource-pool
                     , transformers
                     , mtl
                     , text
                     , aeson
                     , containers
                     , process >= 1.4.3.0
                     --, zip-archive >= 0.3.0.5
                     , zip >= 0.1.9
                     , path >= 0.5.12
                     , path-io >= 1.2.2
                     , time >= 1.6.0.1
                     , bytestring >= 0.10.8.1
                     , webdriver >= 0.8.4
                     , wreq >= 0.5.0.0
                     , lens >= 4.15.1
  default-language:    Haskell2010

executable hasbolt-sample-app-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , hasbolt
                     , hasbolt-sample-app
                     , mtl
  default-language:    Haskell2010

test-suite hasbolt-sample-app-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , hasbolt-sample-app
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/zmactep/hasbolt-sample-app
